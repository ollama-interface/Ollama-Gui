{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "sql:default",
    "sql:allow-select",
    "sql:allow-load",
    "sql:allow-execute",
    "core:app:default",
    "core:path:default",
    "core:path:allow-resolve-directory",
    "opener:allow-open-path",
    "shell:allow-open",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ollama-server",
          "cmd": "ollama",
          "args": ["serve"]
        },
        {
          "name": "open-folder",
          "cmd": "open",
          "args": ["*"]
        },
        {
          "name": "xdg-open-folder",
          "cmd": "xdg-open",
          "args": ["*"]
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "*"
        }
      ]
    }
  ]
}
