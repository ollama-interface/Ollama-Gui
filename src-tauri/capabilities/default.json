{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:app:default",
    "shell:allow-open",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ollama-server",
          "cmd": "ollama",
          "args": [
            "serve"
          ],
          "sidecar": false
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "*"
        }
      ]
    }
  ]
}